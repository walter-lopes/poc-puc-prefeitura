@model SGM_MVC.Models.Servidor.Funcionario
@{
    ViewData["Title"] = "Manutenção de Funcionário";
}


<header>
    <div class="container" style="height: 80px;">
        <div class="row">
            <div class="col-12">
                <h3>Funcionário</h3>
            </div>
        </div>
    </div>
</header>

<content>
    <div class="container" style="height:auto">
        <div class="row">
            <div class="col-12">
                <form asp-action="PesquisaFuncionario" method="post">
                    <label>Pesquisar Funcionário:</label>
                    <input type="text" id="IdEmail" placeholder="E-mail" name="IdEmail" required />
                    <button class="btn btn-primary">Pesquisar</button>

                    @if (null != @ViewData["MessageError"])
                    {
                        <p>
                            <strong style="color:red">Erro: @ViewData["MessageError"]</strong>
                        </p>
                    }

                </form>
            </div>
        </div>
    </div>
</content>
<br />

<br />
@if (null != Model)
{
    <div class="col-12">
        <h4>Informações do Funcionário</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-3">
                Data de Nascimento
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Cargo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cargo)
            </dd>
        </dl>
    </div>
}

<footer>
    <div class="col-12">
        <a asp-action="Manutencao" asp-controller="Portal" class="btn btn-primary">Voltar</a>
        @if (User.IsInRole("Recursos Humanos"))
        {
            <a asp-action="CadastrarFuncionario" class="btn btn-primary">Novo Funcionário</a>
        }
    </div>
</footer>
